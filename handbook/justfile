# Dizzy Handbook Build Recipes

# Default recipe: build both formats
default: pdf

# Build PDF version
pdf:
    typst compile handbook.typ handbook.pdf

# Build HTML version (requires typst and pandoc)
html:
    typst compile --features html handbook.typ handbook.html

# Build both PDF and HTML
all: pdf html

# Watch and rebuild PDF on changes
watch:
    typst watch handbook.typ handbook.pdf

# Clean build artifacts
clean:
    rm -f handbook.pdf handbook.html

